{
    "database_name": "financial_report",
    "description": "This database is designed to store and organize data from annual financial reports, including metadata, tables, and sections extracted from reports such as FORM 10-K and non-standard format reports.",
    "database_schema": [
        {
            "table": {
                "table_name": "metadata",
                "description": "This table stores metadata about each report, including the company name, report type, fiscal year, and other relevant information."
            },
            "columns": [
                {
                    "column_name": "report_id",
                    "column_type": "UUID",
                    "description": "A unique identifier for each report."
                },
                {
                    "column_name": "report_pages",
                    "column_type": "INTEGER",
                    "description": "The number of pages in this report."
                },
                {
                    "column_name": "report_type",
                    "column_type": "VARCHAR",
                    "description": "The type of the report, such as FORM 10-K or non-standard format."
                },
                {
                    "column_name": "report_path",
                    "column_type": "VARCHAR",
                    "description": "The path to the PDF file."
                }
            ],
            "primary_keys": [
                "report_id"
            ]
        },

        {
            "table": {
                "table_name": "pages",
                "description": "This table stores page content of the reports, including their content and their order within the report."
            },
            "columns": [
                {
                    "column_name": "page_id",
                    "column_type": "UUID",
                    "description": "A unique identifier for each page within a report."
                },
                {
                    "column_name": "page_number",
                    "column_type": "INTEGER",
                    "description": "The page number on which this section is located in the report."
                },
                {
                    "column_name": "report_id",
                    "column_type": "UUID",
                    "description": "A foreign key linking to the report ID in the metadata table."
                },
                {
                    "column_name": "page_description",
                    "column_type": "VARCHAR",
                    "description": "A brief description or summary of the table."
                },
                {
                    "column_name": "page_content",
                    "column_type": "VARCHAR",
                    "description": "The content of the page."
                }
            ],
            "primary_keys": [
                "page_id"
            ],
            "foreign_keys": [
                [
                    "report_id",
                    "metadata",
                    "report_id"
                ]
            ]
        },

        {
            "table": {
                "table_name": "sections",
                "description": "This table stores sections of the reports, including their content and their order within the report."
            },
            "columns": [
                {
                    "column_name": "section_id",
                    "column_type": "UUID",
                    "description": "A unique identifier for each section within a report."
                },
                {
                    "column_name": "report_id",
                    "column_type": "UUID",
                    "description": "A foreign key linking to the report ID in the metadata table."
                },
                {
                    "column_name": "section_name",
                    "column_type": "VARCHAR",
                    "description": "The name of the section."
                },
                {
                    "column_name": "section_content",
                    "column_type": "VARCHAR",
                    "description": "The content of the section."
                }
            ],
            "primary_keys": [
                "section_id"
            ],
            "foreign_keys": [
                [
                    "report_id",
                    "metadata",
                    "report_id"
                ]
            ]
        },


        {
            "table": {
                "table_name": "tables",
                "description": "This table contains information about the individual tables extracted from the reports, including their name, description, and structure."
            },
            "columns": [
                {
                    "column_name": "table_id",
                    "column_type": "UUID",
                    "description": "A unique identifier for each table within a report."
                },
                {
                    "column_name": "report_id",
                    "column_type": "UUID",
                    "description": "A foreign key linking to the report ID in the metadata table."
                },
                {
                    "column_name": "ref_section",
                    "column_type": "UUID",
                    "description": "A foreign key linking to the section ID in the section table."
                },
                {
                    "column_name": "table_name",
                    "column_type": "VARCHAR",
                    "description": "The name or title of the table."
                },
                {
                    "column_name": "table_description",
                    "column_type": "VARCHAR",
                    "description": "A brief description or summary of the table."
                },
                {
                    "column_name": "ref_page",
                    "column_type": "UUID",
                    "description": "A foreign key linking to the page ID in the pages table."
                },
                {
                    "column_name": "table_content",
                    "column_type": "VARCHAR",
                    "description": "The content of the table, either as structured data or stored separately."
                }
            ],
            "primary_keys": [
                "table_id"
            ],
            "foreign_keys": [
                [
                    "report_id",
                    "metadata",
                    "report_id"
                ],
                [
                    "ref_section",
                    "sections",
                    "section_id"
                ],
                [
                    "ref_page",
                    "pages",
                    "page_id"
                ]
            ]
        }
    ]

}
